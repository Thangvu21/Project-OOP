<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demoDB.EditController">
   <children>
      <VBox prefHeight="400.0" prefWidth="400.0">
         <children>
            <TabPane prefHeight="400.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Sửa từ">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="196.0" prefWidth="600.0">
                           <children>
                              <TextField fx:id="fieldWordModify" layoutX="103.0" layoutY="46.0" prefHeight="35.0" prefWidth="195.0" />
                              <TextField fx:id="fieldExplainModify" layoutX="103.0" layoutY="131.0" prefHeight="35.0" prefWidth="195.0" />
                              <Button fx:id="modify" layoutX="175.0" layoutY="218.0" mnemonicParsing="false" onAction="#modifyWord" text="MODIFY" />
                              <Label alignment="CENTER" layoutX="139.0" layoutY="14.0" prefHeight="32.0" prefWidth="122.0" text="WORD" />
                              <Label alignment="CENTER" layoutX="140.0" layoutY="94.0" prefHeight="32.0" prefWidth="122.0" text="EXPLAIN" />
                           </children></AnchorPane>
                  </content>
                </Tab>
                <Tab text="Thêm từ">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TextField fx:id="fieldWordAdd" layoutX="103.0" layoutY="52.0" prefHeight="35.0" prefWidth="195.0" />
                              <TextField fx:id="filedExplainAdd" layoutX="103.0" layoutY="131.0" prefHeight="35.0" prefWidth="195.0" />
                              <Button fx:id="add" layoutX="180.0" layoutY="219.0" mnemonicParsing="false" onAction="#addWord" text="ADD" />
                              <Label alignment="CENTER" layoutX="139.0" layoutY="14.0" prefHeight="32.0" prefWidth="122.0" text="WORD" />
                              <Label alignment="CENTER" layoutX="139.0" layoutY="94.0" prefHeight="32.0" prefWidth="122.0" text="EXPLAIN" />
                           </children></AnchorPane>
                  </content>
                </Tab>
                  <Tab text="Xóa từ">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="318.0" prefWidth="600.0">
                           <children>
                              <TextField fx:id="fieldDeleteWord" layoutX="103.0" layoutY="96.0" prefHeight="35.0" prefWidth="195.0" />
                              <Button fx:id="delete" layoutX="175.0" layoutY="218.0" mnemonicParsing="false" onAction="#deleteWord" text="DELETE" />
                              <Label alignment="CENTER" layoutX="139.0" layoutY="27.0" prefHeight="32.0" prefWidth="122.0" text="WORD" />
                           </children></AnchorPane>
                    </content>
                  </Tab>
              </tabs>
            </TabPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
